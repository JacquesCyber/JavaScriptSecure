{
  "type": "module",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "csurf": "^1.11.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.2",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "lusca": "^1.7.0",
    "mongoose": "^8.17.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.32.0",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^16.3.0",
    "nodemon": "^3.1.10",
    "wrangler": "^4.45.4"
  },
  "scripts": {
    "dev": "nodemon src/server.js",
    "dev:https": "cross-env NODE_ENV=production nodemon src/server.js",
    "start": "node src/server.js",
    "start:https": "cross-env NODE_ENV=production node src/server.js",
    "prod": "cross-env NODE_ENV=production node src/server.js",
    "test": "cross-env NODE_ENV=test node src/server.js",
    "test:coverage": "echo 'No tests configured yet' && mkdir -p coverage && echo 'lcov_file_not_found' > coverage/lcov.info",
    "lint": "eslint src/ --config eslint.config.js",
    "lint:security": "eslint src/ --config eslint.config.security.js",
    "test:server": "cross-env NODE_ENV=test node src/server.js",
    "cert:generate": "cd scripts && ./generate-cert.sh",
    "health": "curl -f http://localhost:3000/health || exit 1",
    "seed:employee": "node scripts/seedEmployee.js",
    "build:frontend": "node scripts/build.js",
    "deploy:pages": "wrangler pages deploy dist --project-name=javascriptsecure --commit-dirty=true",
    "deploy": "npm run build:frontend && npm run deploy:pages"
  }
}
